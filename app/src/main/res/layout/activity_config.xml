<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/mytext_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Server URL"/>

    <EditText
        android:id="@+id/mytext_apikey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Api Key"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/mytext_startitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Start category"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/mytext_startnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Start num"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/mytext_setserver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="SetServer URL"/>


    <TextView
        android:id="@+id/mytext_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_weight="0.79" />

    <TextView android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

    <Button
        android:id="@+id/mybutton_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check" />


    <Button
        android:id="@+id/mybutton_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />

    <Button
        android:id="@+id/mybutton_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

    </LinearLayout>
</LinearLayout>